{
  "name": "coding-boilerplate",
  "version": "1.5.0",
  "scripts": {
    "start": "cross-env NODE_ENV=development npm-run-all -p dev:*",
    "build": "cross-env NODE_ENV=production npm-run-all -s dev:*",
    "dev:copy": "node config/scripts/copy.js",
    "dev:ejs": "node config/scripts/ejs.js",
    "dev:sass": "node config/scripts/sass.js",
    "dev:fuse": "node config/scripts/fuse.js",
    "dev:server": "node config/scripts/server.js",
    "lint:html": "node config/scripts/lint_html.js",
    "format:prettier": "node config/scripts/prettier.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all -p lint:*"
    }
  },
  "devDependencies": {
    "autoprefixer": "9.0.2",
    "babel-core": "6.26.3",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.7.0",
    "browser-sync": "2.24.6",
    "chokidar": "2.0.4",
    "cross-env": "5.2.0",
    "css-mqpacker": "7.0.0",
    "ejs": "2.6.1",
    "fs-extra": "7.0.0",
    "fuse-box": "3.4.0",
    "globby": "8.0.1",
    "htmlhint": "0.9.13",
    "husky": "0.14.3",
    "node-notifier": "5.2.1",
    "node-sass": "4.9.2",
    "npm-run-all": "4.1.3",
    "postcss": "7.0.2",
    "prettier": "1.14.0",
    "ssi": "0.3.0",
    "typescript": "3.0.1",
    "uglify-es": "3.3.9",
    "uglify-js": "3.4.6"
  },
  "engines": {
    "node": "8.11.3",
    "npm": "5.6.0"
  }
}
