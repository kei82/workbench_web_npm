{
  "name": "web_dev",
  "version": "1.0.0",
  "scripts": {
    "start": "npm-run-all -p build:* server watch:*",
    "notify": "node config/scripts/notify.js",
    "server": "node config/scripts/server.js",
    "sass": "node config/scripts/sass.js",
    "postcss": "node config/scripts/postcss.js",
    "build:css": "npm run sass && npm run postcss",
    "watch:sass": "chokidar src/**/*.scss -c \"npm run build:css\"",
    "watch:html": "chokidar src/**/*.html -c \"npm run lint:html -- {path}\"",
    "lint:html": "node config/scripts/lint_html.js",
    "hooks:precommit": "npm run lint:html"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run hooks:precommit"
    }
  },
  "devDependencies": {
    "autoprefixer": "^8.6.4",
    "browser-sync": "^2.24.5",
    "chokidar-cli": "^1.2.0",
    "connect-ssi": "^1.1.1",
    "css-mqpacker": "^6.0.2",
    "fs-extra": "^6.0.1",
    "globby": "^8.0.1",
    "htmlhint": "^0.9.13",
    "husky": "^1.0.0-rc.9",
    "imagemin": "^5.3.1",
    "imagemin-gifsicle": "^5.2.0",
    "imagemin-mozjpeg": "^7.0.0",
    "imagemin-pngquant": "^5.1.0",
    "imagemin-svgo": "^6.0.0",
    "node-notifier": "^5.2.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "postcss": "^6.0.23"
  }
}
