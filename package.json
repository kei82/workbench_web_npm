{
  "name": "web-coding-boilerplate",
  "version": "2.3.1",
  "engines": {
    "node": "10.15.3",
    "npm": "6.4.1"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development npm-run-all server",
    "build": "cross-env NODE_ENV=production npm-run-all -s build:*",
    "server": "webpack-dev-server",
    "build:clean": "trash dist",
    "build:webpack": "webpack",
    "build:copy": "cpy **/* **/.* !**/*.ejs !**/babel/**/*.js !**/sass/**/*.scss ../dist --parents --cwd=src",
    "build:disuse": "trash dist/**/css/**/*.js",
    "build:ejs": "node scripts/ejs.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.html": [
        "htmlhint",
        "prettier --write",
        "git add"
      ],
      "*.scss": [
        "stylelint --fix",
        "prettier --write",
        "git add"
      ],
      "*.js": [
        "eslint --fix",
        "prettier --write",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "7.4.3",
    "@babel/polyfill": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "autoprefixer": "9.5.1",
    "babel-loader": "8.0.5",
    "cpy-cli": "2.0.0",
    "cross-env": "5.2.0",
    "css-loader": "2.1.1",
    "css-mqpacker": "7.0.0",
    "ejs": "2.6.1",
    "eslint": "5.16.0",
    "fs-extra": "7.0.1",
    "globby": "9.2.0",
    "htmlhint": "0.11.0",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "mini-css-extract-plugin": "0.6.0",
    "node-sass": "4.11.0",
    "npm-run-all": "4.1.5",
    "postcss": "7.0.14",
    "postcss-loader": "3.0.0",
    "prettier": "1.17.0",
    "sass-loader": "7.1.0",
    "ssi": "0.3.0",
    "stylelint": "10.0.1",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-recommended-scss": "3.3.0",
    "stylelint-config-standard": "18.3.0",
    "stylelint-scss": "3.6.0",
    "trash-cli": "2.0.0",
    "webpack": "4.30.0",
    "webpack-cli": "3.3.1",
    "webpack-dev-server": "3.3.1"
  }
}
