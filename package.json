{
  "name": "web-coding-boilerplate",
  "version": "2.3.5",
  "engines": {
    "node": "10.15.3",
    "npm": "6.4.1"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server",
    "build": "cross-env NODE_ENV=production npm-run-all -s build:*",
    "build:clean": "trash dist",
    "build:webpack": "webpack",
    "build:copy": "cpy **/* **/.* !**/babel/**/*.js !**/sass/**/*.scss ../dist --parents --cwd=src",
    "build:disuse": "trash dist/**/css/**/*.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.html": [
      "htmlhint",
      "prettier --write",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "autoprefixer": "9.6.1",
    "babel-loader": "8.0.6",
    "connect-ssi": "1.1.1",
    "core-js": "3.1.4",
    "cpy-cli": "2.0.0",
    "cross-env": "5.2.0",
    "css-loader": "3.1.0",
    "css-mqpacker": "7.0.0",
    "eslint": "6.1.0",
    "fs-extra": "8.1.0",
    "glob": "7.1.4",
    "htmlhint": "0.11.0",
    "husky": "3.0.2",
    "lint-staged": "9.2.1",
    "mini-css-extract-plugin": "0.8.0",
    "node-sass": "4.12.0",
    "npm-run-all": "4.1.5",
    "postcss": "7.0.17",
    "postcss-loader": "3.0.0",
    "prettier": "1.18.2",
    "regenerator-runtime": "0.13.3",
    "sass-loader": "7.1.0",
    "stylelint": "10.1.0",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-recommended-scss": "3.3.0",
    "stylelint-config-standard": "18.3.0",
    "stylelint-scss": "3.9.2",
    "trash-cli": "3.0.0",
    "webpack": "4.38.0",
    "webpack-cli": "3.3.6",
    "webpack-dev-server": "3.7.2"
  }
}
