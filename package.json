{
  "name": "coding-boilerplate",
  "version": "1.4.0",
  "scripts": {
    "start": "cross-env NODE_ENV=development npm-run-all -p build:*",
    "build": "cross-env NODE_ENV=production npm-run-all -p build:*",
    "build:sass": "node config/scripts/sass.js",
    "build:fuse": "node config/scripts/fuse.js",
    "build:server": "node config/scripts/server.js",
    "lint:html": "node config/scripts/lint_html.js",
    "format:prettier": "node config/scripts/prettier.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all -p lint:*"
    }
  },
  "devDependencies": {
    "autoprefixer": "9.0.1",
    "babel-core": "6.26.3",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.7.0",
    "browser-sync": "2.24.6",
    "chokidar": "^2.0.4",
    "cross-env": "5.2.0",
    "css-mqpacker": "7.0.0",
    "ejs": "2.6.1",
    "fs-extra": "7.0.0",
    "fuse-box": "3.4.0",
    "globby": "8.0.1",
    "htmlhint": "0.9.13",
    "husky": "1.0.0-rc.13",
    "node-notifier": "5.2.1",
    "node-sass": "4.9.2",
    "npm-run-all": "4.1.3",
    "postcss": "7.0.1",
    "prettier": "1.13.7",
    "ssi": "0.3.0",
    "typescript": "2.9.2",
    "uglify-es": "3.3.9"
  },
  "engines": {
    "node": "8.11.3",
    "npm": "5.6.0"
  }
}
